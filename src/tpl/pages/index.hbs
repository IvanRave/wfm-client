<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{{lang.wfm}}</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css/main.min.css" rel="stylesheet" />
</head>
<body>
    <!--[if lt IE 9]><p class="chromeframe">You are using an <strong>outdated</strong> browser. Please upgrade your browser.</p><![endif]-->
    <div class="hide" id="workspace-project">
        <div class="loader-main"></div>
        <div>
            <!-- current: vwmWorkspace-->
            <nav class="wfm-nav clearfix navbar-inverse" data-bind="with: vwmUserProfile">
                <div class="pull-left">
                    <span class="link-view-inverse" data-bind="click: deactivateVwmChild">{{lang.wfm}}</span>
                </div>
                <div class="pull-right">
                    <button type="button" class="btn btn-xs btn-inverse" data-bind="click: $parent.mdlWorkspace.logOff">
                        <i class="glyphicon glyphicon-off"></i>
                        {{capitalizeFirst lang.logOut}}
                    </button>
                </div>
            </nav>
            <div class="wfm-content-wrap">
                <div>
                    <div data-bind="visible: mdlWorkspace.isTriedToLoadUserProfile">
                        <div data-bind="ifnot: vwmUserProfile">
                            <div data-bind="slideVisible: isRegisteredPage">
                                <!-- register page -->
                                {{> account-logon }}
                            </div>
                            <div data-bind="slideHidden: isRegisteredPage">
                                <!-- login page -->
                                {{> account-register }}
                            </div>
                        </div>
                        <div data-bind="with: vwmUserProfile">
                            <!-- current: vwmUserProfile -->
                            <div data-bind="ifnot: mdlStage.isLoadedEmployees">{{lang.loading}}</div>
                            <div data-bind="if: mdlStage.isLoadedEmployees">
                                <!-- If no selected employee: show list of employees -->
                                <div data-bind="ifnot: slcVwmChild">
                                    {{> employee-list }}
                                </div>
                                <div data-bind="with: slcVwmChild">
                                    <!-- current: vwmEmployee-->
                                    <div data-bind="if: mdlEmployee.canEditAll">
                                        {{> edit-mode-btn }}
                                    </div>
                                    <div>
                                        <div>
                                            <div class="clearfix">
                                                <div class="sidebar-toggle" data-bind="css: $root.sidebarToggleCss">
                                                    <button type="button" data-bind="click: $root.toggleIsVisibleMenu" title="Hide/show menu">
                                                        <i class="glyphicon glyphicon-chevron-left" data-bind="visible: $root.isVisibleMenu"></i>
                                                        <i class="glyphicon glyphicon-chevron-right" data-bind="hidden: $root.isVisibleMenu"></i>
                                                    </button>
                                                </div>
                                                <!-- TODO: fix: slider scroll with page scroll #MH! -->
                                                <div class="sidebar-wrap" data-bind="css: $root.sidebarWrapCss">
                                                    <div data-bind="scroller: { }">
                                                        {{> workspace-menu }}
                                                    </div>
                                                </div>
                                                <div class="workspace-container" data-bind="with: vwmCompany, css: $root.workAreaCss">
                                                    <!-- current: vwmCompany-->
                                                    <div class="wfm-top-tab-panel file-mgr-block">
                                                        <button class="btn btn-inverse btn-sm" type="button" data-bind="click: fmgr.show">
                                                            <i class="glyphicon glyphicon-folder-open"></i>&nbsp;&nbsp;<span>{{capitalizeFirst lang.fileManager}}</span>
                                                        </button>
                                                    </div>
                                                    {{> modal-file-mgr }}
                                                    <div data-bind="ifnot: slcVwmChild">
                                                        <!-- if no selected wegion -->
                                                        {{> section-panel-standard }}
                                                        {{> dashboard-block }}
                                                        {{> company }}
                                                    </div>
                                                    <div data-bind="with: slcVwmChild">
                                                        <!-- current: vwmWegion -->
                                                        <div data-bind="ifnot: slcVwmChild">
                                                            {{> section-panel-standard }}
                                                            {{> dashboard-block }}
                                                            {{> wegion }}
                                                        </div>
                                                        <div data-bind="with: slcVwmChild">
                                                            <!-- current: vwmWield-->
                                                            <div data-bind="ifnot: slcVwmChild">
                                                                {{> section-panel-standard }}
                                                                {{> dashboard-block }}
                                                                {{> wield }}
                                                            </div>
                                                            <div data-bind="with: slcVwmChild">
                                                                <!-- current: vwmWroup -->
                                                                <div data-bind="ifnot: slcVwmChild">
                                                                    {{> section-panel-standard }}
                                                                    {{> dashboard-block }}
                                                                    {{> wroup }}
                                                                </div>
                                                                <div data-bind="with: slcVwmChild">
                                                                    <!-- current: vwmWell -->
                                                                    {{> section-panel-well }}
                                                                    {{> dashboard-block }}
                                                                    {{> well }}
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end: isLoadedAccountInfo -->
                </div>
            </div>
        </div>
        {{> modal-standard }}
        {{> modal-panzoom }}
        {{> modal-wide }}
        {{> clip-path-perfomance }}
    </div>
    <footer class="navbar-fixed-bottom navbar-inverse">
        <div class="footer-logo-wrap">
            <div class="footer-logo"></div>
        </div>
    </footer>
    <!-- Load main script file for page or default (with auth logic only) -->
    {{#if conf.isProd}}
    <script data-main="js/main-bundle-{{package.version}}" src="js/require.js"></script>
    {{else}}
    <script data-main="js/main" src="js/require.js"></script>
    {{/if}}
</body>
</html>