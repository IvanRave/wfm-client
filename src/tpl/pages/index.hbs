<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>{{lang.wfm}}</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="css/bootstrap.css" rel="stylesheet" media="screen">
    <link href="css/bootstrap-theme.css" rel="stylesheet" media="screen">
    <link href="css/main.css" rel="stylesheet" />
    <link href="css/jquery.fileupload.css" rel="stylesheet" />
    <link href="css/jquery.Jcrop.css" rel="stylesheet" />
    <!-- date picker -->
    <link href="css/default.css" rel="stylesheet" />
    <link href="css/default.date.css" rel="stylesheet" />
    <link href="css/default.time.css" rel="stylesheet" />
    <!-- /date picker-->
</head>
<body>
    <!--[if lt IE 9]><p class="chromeframe">You are using an <strong>outdated</strong> browser. Please upgrade your browser.</p><![endif]-->
    <div id="workspace-project">
        <div class="spinner"></div>
        <div data-bind="with: userProfile">
            <nav class="wfm-nav clearfix navbar-inverse">
                <div class="pull-left">
                    <a href="#" data-bind="click: loadAccountInfo">{{lang.wfm}}</a>
                </div>
                <div class="pull-right" style="display:none" data-bind="visible: isLogged">
					<a href="#" data-bind="click: logOff">{{capitalizeFirst lang.logOut}}</a>
                </div>
            </nav>
            <div class="wfm-content-wrap">
                <div>
                    <div style="display:none" data-bind="visible: isLoadedAccountInfo">
                        <div data-bind="ifnot: isLogged">
                            <div data-bind="if: isRegistered">
                                {{> account-logon }}
                            </div>
                            <div data-bind="ifnot: isRegistered">
                                {{> account-register }}
                            </div>
                        </div>
                        <div data-bind="visible: isLogged">
                            <div data-bind="ifnot: isLoadedEmployees">{{lang.loading}}</div>
                            <div style="display:none" data-bind="visible: isLoadedEmployees">
                                <div data-bind="ifnot: selectedEmployee">
                                    {{> employee-list }}
                                </div>
                                <div data-bind="with: selectedEmployee">
                                    <div data-bind="if: canEditAll">
                                        {{> edit-mode-btn }}
                                    </div>
                                    <div data-bind="with: company">
                                        <div class="text-center" data-bind="ifnot: isLoadedWegions">
                                            <span>{{lang.loading}}...</span>
                                        </div>
                                        <div style="display:none" data-bind="visible: isLoadedWegions">
                                            <div class="clearfix">
                                                <div class="sidebar-toggle" data-bind="css: $root.sidebarToggleCss">
                                                    <button type="button" data-bind="click: $root.toggleIsVisibleMenu" title="Hide/show menu">
                                                        <i class="glyphicon glyphicon-chevron-left" data-bind="visible: $root.isVisibleMenu"></i>
                                                        <i class="glyphicon glyphicon-chevron-right" data-bind="hidden: $root.isVisibleMenu"></i>
                                                    </button>
                                                </div>
                                                <div class="sidebar-wrap" data-bind="css: $root.sidebarWrapCss">
                                                    <div data-bind="scroller: { }">
                                                        {{> workspace-menu }}
                                                    </div>
                                                </div>
                                                <div class="workspace-container" data-bind="css: $root.workAreaCss">
                                                    <div data-bind="with: selectedWegion">
                                                        <div data-bind="ifnot: selectedWellField">
                                                            {{> wegion }}
                                                        </div>
                                                        <div data-bind="with: selectedWellField">
                                                            <div data-bind="ifnot: selectedWellGroup">
                                                                {{> wield }}
                                                            </div>
                                                            <div data-bind="with: selectedWellGroup">
                                                                <div data-bind="ifnot: selectedWell">
                                                                    {{> wroup }}
                                                                </div>
                                                                <div data-bind="with: selectedWell">
                                                                    {{> well }}
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end: isLoadedAccountInfo -->
                </div>
            </div>
        </div>
        {{> modal-standard }}
        {{> modal-file-mgr }}
        {{> modal-panzoom }}
        {{> modal-wide }}
        {{> clip-path-perfomance }}
    </div>
    <footer class="navbar-fixed-bottom navbar-inverse">
        <div class="footer-logo-wrap">
            <div class="footer-logo"></div>
        </div>
    </footer>
    <!-- Load main script file for page or default (with auth logic only) -->
    {{#if conf.isProd}}
    <script data-main="js/main-bundle-{{package.version}}" src="js/require.js"></script>
    {{else}}
    <script data-main="js/main" src="js/require.js"></script>
    {{/if}}
</body>
</html>