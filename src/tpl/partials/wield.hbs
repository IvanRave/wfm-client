<div>
  <!-- current: vwmStage (vwmWieldStage) -->
  <div class="tab-content-pad">
    <div data-bind="if: slcVwmSectionWrk() === null">
        {{> widget-default-summary }}
        {{> widget-wield-map }}

        {{> widget-scope}}
    </div>
    <div data-bind="if: slcVwmSectionWrk">
      <div data-bind="if: slcVwmSectionWrk().mdlSection.sectionPatternId === 'wield-summary'">
        {{> summary-standard }}
      </div>
      <div data-bind="if: slcVwmSectionWrk().mdlSection.sectionPatternId === 'wield-map'">
        {{> wield-map}}
      </div>
      <div data-bind="if: slcVwmSectionWrk().mdlSection.sectionPatternId === 'wield-pvt'">
        {{> wield-pvt}}
      </div>      
      <div data-bind="if: slcVwmSectionWrk().mdlSection.sectionPatternId === 'wield-reservoir'">
        {{> wield-reservoir}}
      </div>
      <div data-bind="if: slcVwmSectionWrk().mdlSection.sectionPatternId === 'wield-potential'">
        {{> wield-potential}}
      </div>
    </div>
  </div>
</div>