<div data-bind="ifnot: $root.userProfile.selectedEmployee().isEditMode">
  <div data-bind="foreach: propSpecList">
    <div data-bind="if: tpe">
      <div data-bind="if: $parent[clientId]">
        <div>
          <label data-bind="text: ttl"></label>
        </div>
        <div class="well well-sm">
          <span data-bind="if: tpe === 'SingleLine'">
            <span data-bind="text: $parent[clientId]"></span>
          </span>
          <span data-bind="if: tpe === 'MultiLine'">
            <span class="pre-wrap-text" data-bind="text: $parent[clientId]"></span>
          </span>
          <span data-bind="if: tpe === 'DateLine'">
            <span data-bind="unix: $parent[clientId]"></span>
          </span>
          <span data-bind="if: tpe === 'ImgSrc'">
            <img data-bind="attr: {width: addtData.width, src: $parent[clientId] }"></img>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>
<div data-bind="if: $root.userProfile.selectedEmployee().isEditMode">
  <div class="clearfix">
    <div class="pull-left">
      <button class="btn btn-sm btn-default" data-bind="click: save">{{capitalizeFirst lang.toSave}}</button>
    </div>
    <div class="pull-right">
      <button class="btn btn-sm btn-default" data-bind="click: $parent.removeChild">{{capitalizeFirst lang.toDelete}}</button>
    </div>
  </div>
  <div data-bind="foreach: propSpecList">
    <!-- Properties without type do not showed in this list: not-editable properties -->
    <div data-bind="if: tpe">
      <div>
        <label data-bind="text: ttl"></label>
      </div>
      <div class="well well-sm">
        <span data-bind="if: tpe === 'SingleLine'">
          <input class="form-control" type="text" data-bind="value: $parent[clientId], attr: {maxlength: addtData.maxLength}"></input>
        </span>
        <span data-bind="if: tpe === 'MultiLine'">
          <textarea class="form-control" rows="5" data-bind="value: $parent[clientId]"></textarea>
        </span>
        <span data-bind="if: tpe === 'DateLine'">
          <input class="input-sm" type="text" size="10" data-bind="datepicker: $parent[clientId], datepickerOptions: { format: 'yyyy-mm-dd', selectYears: true, selectMonths: true }" />
        </span>
        <span data-bind="if: tpe === 'ImgSrc'">
          <span data-bind="visible: $parent[clientId]">
            <img data-bind="attr: {width: addtData.width, src: $parent[clientId] }"></img>
          </span>
          <button class="btn btn-default btn-sm" data-bind="click: $parent.selectImgSrc">Select image...</button>
        </span>
      </div>
    </div>
  </div>
</div>