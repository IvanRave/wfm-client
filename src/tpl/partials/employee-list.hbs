<div class="min-margin">
  <ul class="list-group" data-bind="foreach: employees">
    <li class="list-group-item">
      <div class="clearfix" data-bind="if: canViewAll">
        <div class="pull-left">
          <span class="pointer" data-bind="click: $parent.selectEmployee">
            <span data-bind="with: company">
              <span data-bind="if: urlOfLogo">
                <img class="company-logo" src="#" data-bind="attr: {src: urlOfLogo, width: getPropSpecByClientId('urlOfLogo').addtData.width }" title="{{capitalizeFirst lang.toView}} {{lang.wfm}}" />
              </span>
              <span data-bind="ifnot: urlOfLogo">
                <img class="company-logo" src="img/question.jpg"></img>
              </span>
            </span>
          </span>
        </div>
        <div class="pull-left min-left-margin" data-bind="with: company">
          <h4>
            <span data-bind="text: name"></span>
          </h4>
          <h5>
            <span data-bind="text: description"></span>
          </h5>
        </div>
      </div>
    </li>
  </ul>
  <div data-bind="ifnot: isOwnerAlready">
    <div class="col-md-5 col-md-offset-3">
      <form class="form-horizontal" data-bind="submit: postEmployee">
        <div class="form-group">
          <label class="control-label col-md-3">{{capitalizeFirst lang.companyName}}</label>
          <div class="col-md-9">
            <input class="form-control" type="text" pattern=".{3,255}" title="From 3 to 255 characters" data-bind="value: nameOfCreatedCompany" required="" placeholder="{{lang.companyName}}"></input>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-4 col-md-offset-3">
            <div class="checkbox">
              <label>
                <input type="checkbox" required="" /> I agree with terms
              </label>
            </div>
          </div>
          <div class="col-md-5 text-right">
            <button class="btn btn-default" type="submit">{{capitalizeFirst lang.toRegisterACompany}}</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>