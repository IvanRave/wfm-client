<div>
  <div data-bind="ifnot: mdlStage.isLoadedListOfIntegrity">
    {{capitalizeFirst lang.loading}}...
  </div>
  <div data-bind="if: mdlStage.isLoadedListOfIntegrity">
    <div data-bind="ifnot: listOfVwmIntegrity().length === 0">
      <small>No files.</small>
    </div>
    <div data-bind="if: listOfVwmIntegrity().length > 0">
      <div class="row">
        <div class="col-sm-8">
          <div data-bind="with: selectedWellFileIntegrity" class="text-center">
            <img data-bind="attr: { src: Url }" alt="Integrity image" class="img-responsive" />
          </div>
        </div>
        <div class="col-sm-4">
          <h5>Files:</h5>
          <ul data-bind="foreach: sectionWellFiles" class="nav">
            <li data-bind="css: { 'open': isSelectedWellFileIntegrity }">
              <a href="#" data-bind="text: displayedName, click: $parent.selectWellFileIntegrity"></a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>