<div>
  <!-- current: vwmWorkspace -->
  <div class="clearfix">
    <div class="col-md-4 col-md-offset-1">
      <h3>
        {{capitalizeFirst lang.toRegisterACompany}} {{lang.or}} <span class="link-view pointer" data-bind="click: toggleIsRegisteredPage">{{lang.signIn}}</span>:
      </h3>
      <form class="form-horizontal" data-bind="submit: register">
        <div class="form-group">
          <label class="control-label col-md-3">{{capitalizeFirst lang.email}}</label>
          <div class="col-md-9">
            <input class="form-control" type="email" required="" autofocus="" data-bind="value: objToRegister.email"/>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-md-3">{{capitalizeFirst lang.password}}</label>
          <div class="col-md-9">
            <input class="form-control" type="password" required="" pattern=".{6,18}" title="From 6 to 18 characters" data-bind="value: objToRegister.password" autocomplete="off" />
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-md-3">{{capitalizeFirst lang.passwordConfirmation}}</label>
          <div class="col-md-9">
            <input class="form-control" type="password" required="" pattern=".{6,18}" title="From 6 to 18 characters" data-bind="value: objToRegister.passwordConfirmation" autocomplete="off" />
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-12 text-right">
            <div>
              <button class="btn btn-default" type="submit">{{capitalizeFirst lang.toRegister}}</button>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-9 col-md-offset-3">
            <div class="has-error">
              <span class="help-block" data-bind="text: msgToRegister.err"></span>
            </div>
            <div class="has-success">
              <span class="help-block" data-bind="text: msgToRegister.scs"></span>
            </div>
          </div>
        </div>
      </form>
    </div>
    <div class="col-md-4 col-md-offset-2">
      <h3>{{capitalizeFirst lang.emailConfirmation}}:</h3>
      <form class="form-horizontal" data-bind="submit: confirmRegistration">
        <div class="form-group">
          <label class="control-label col-md-3">{{capitalizeFirst lang.email}}</label>
          <div class="col-md-9">
            <input class="form-control" type="email" required="" data-bind="value: objToConfirmRegistration.email"/>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-md-3">{{capitalizeFirst lang.confirmationToken}}</label>
          <div class="col-md-9">
            <input class="form-control" required="" pattern=".{6,40}" title="From 6 to 40 characters" data-bind="value: objToConfirmRegistration.token" autocomplete="off" />
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-12 text-right">
            <div>
              <button class="btn btn-default" type="submit">{{capitalizeFirst lang.emailConfirmation}}</button>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-9 col-md-offset-3">
            <div class="has-error">
              <span class="help-block" data-bind="text: msgToConfirmRegistration.err"></span>
            </div>
            <div class="has-success">
              <span class="help-block" data-bind="text: msgToConfirmRegistration.scs"></span>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>