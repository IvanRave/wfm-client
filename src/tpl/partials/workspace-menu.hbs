<div class="wfm-list">
  <!-- parent: vwmUserProfile -->
  <!-- current: slcVwmEmployee (slcVwmChild) -->
  <ul class="list-unstyled">
    <!-- ko with: vwmCompany -->
    <li>
      <div class="wfm-menu-item wfm-menu-header" data-bind="click: $parents[1].selectVwmChild, css: { 'wfm-slc-menu-item': isShowedVwmStage }">
        <!-- select company view, using userprofile parent -->
        <span data-bind="text: mdlStage.name, attr: {title: mdlStage.name}"></span>
      </div>
    </li>
    <!-- ko ifnot: mdlStage.isLoadedWegions -->
    <li>
      <div class="wfm-menu-item wfm-menu-header text-center">
        <img src="img/ajax-line-loader.gif" alt="{{lang.loading}}"/>
      </div>
    </li>
    <!-- /ko -->
    <!-- ko foreach: listOfVwmChild -->
    <!-- current: vwmWegion-->
    <li>
      <div class="clearfix">
        <i class="glyphicon" data-bind="css:{ 'glyphicon-circle-arrow-down' : isOpenItem, 'glyphicon-circle-arrow-right' : !isOpenItem() }, click: toggleItem"></i>
        <div class="wfm-menu-item" data-bind="click: $parent.selectVwmChild, css: { 'wfm-slc-menu-item': isShowedVwmStage }">
          <div class="pull-right">
            <small>
              <i class="glyphicon glyphicon-globe"></i>
            </small>
          </div>
          <div data-bind="with: mdlStage">
            <span data-bind="text: name, attr: {title: name}"></span>
          </div>
        </div>
      </div>
      <ul class="list-unstyled wfm-child" data-bind="visible: isOpenItem">
        <!-- ko foreach: listOfVwmChild -->
        <!-- current: vwmWield -->
        <li>
          <div class="clearfix">
            <i class="glyphicon" data-bind="css:{ 'glyphicon-circle-arrow-down' : isOpenItem, 'glyphicon-circle-arrow-right' : !isOpenItem() }, click: toggleItem"></i>
            <div class="wfm-menu-item" data-bind="click: $parent.selectVwmChild, css: { 'wfm-slc-menu-item': isShowedVwmStage }">
              <div class="pull-right">
                <small>
                  <i class="glyphicon glyphicon-home"></i>
                </small>
              </div>
              <div data-bind="with: mdlStage">
                <span data-bind="text: name, attr: {title: name}"></span>
              </div>
            </div>
          </div>
          <!--snippet-->
        </li>
        <!-- /ko -->
        <li data-bind="if: $root.isEmployeeInEditMode">
          <button class="btn btn-xs" data-bind="click: mdlStage.addWellField" type="button">Add field</button>
        </li>
      </ul>
    </li>
    <!-- /ko -->
    <li data-bind="if: $root.isEmployeeInEditMode">
      <button class="btn btn-xs" data-bind="click: mdlStage.postWegion" type="button">Add region</button>
    </li>
    <!-- /ko -->
  </ul>
</div>